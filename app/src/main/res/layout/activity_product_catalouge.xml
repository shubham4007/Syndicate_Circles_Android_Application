                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="160dp"
                            android:src="@drawable/ic_shopping_store"
                            android:scaleType="centerCrop"
